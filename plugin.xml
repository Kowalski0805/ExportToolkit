<?xml version="1.0"?>
<zend-config xmlns:zf="http://framework.zend.com/xml/zend-config-xml/1.0/">
		<plugin>

            <!-- the plugin name [A-Za-z_] -->
            <pluginName>ExportToolkit</pluginName>

            <!-- a short description -->
			<pluginDescription><![CDATA[]]></pluginDescription>

            <!-- meta data -->
            <pluginVersion>1.0</pluginVersion>
            <pluginRevision>1</pluginRevision>
            <pluginBuildTimestamp>0</pluginBuildTimestamp>

            <!-- put in the URL for the plugin configuration eg. /plugin/ExportToolkit/admin/index -->
            <pluginIframeSrc>/plugin/ExportToolkit/admin/settings</pluginIframeSrc>

            <!-- className of the plugin which extends Pimcore_API_Plugin_Abstract-->
			<pluginClassName>ExportToolkit_Plugin</pluginClassName>

            <!-- include paths relative to plugin-directory -->
			<pluginIncludePaths>
				<path>/ExportToolkit/lib</path>
                <path>/ExportToolkit/models</path>
			</pluginIncludePaths>

			<!-- namespaces to register with autoloader-->
			<pluginNamespaces>
				<namespace>ExportToolkit</namespace>
			</pluginNamespaces>

			<!-- js files with path relative to plugin-directory -->
			<pluginJsPaths>
                <path>/plugins/ExportToolkit/static/js/startup.js</path>
                <path>/plugins/ExportToolkit/static/js/exporttoolkit/config/configpanel.js</path>
                <path>/plugins/ExportToolkit/static/js/exporttoolkit/config/item.js</path>
                <path>/plugins/ExportToolkit/static/js/exporttoolkit/config/attributeconfig.js</path>
			</pluginJsPaths>
            <pluginJsPaths-extjs5>
                <path>/plugins/ExportToolkit/static5/js/startup.js</path>
                <path>/plugins/ExportToolkit/static5/js/exporttoolkit/config/configpanel.js</path>
                <path>/plugins/ExportToolkit/static5/js/exporttoolkit/config/item.js</path>
                <path>/plugins/ExportToolkit/static5/js/exporttoolkit/config/attributeconfig.js</path>
            </pluginJsPaths-extjs5>

			<!-- css files with path relative to plugin-directory -->
			<pluginCssPaths>
                <path>/plugins/ExportToolkit/static/css/example.css</path>
			</pluginCssPaths>
            <pluginCssPaths-extjs5>
                <path>/plugins/ExportToolkit/static5/css/example.css</path>
            </pluginCssPaths-extjs5>
		</plugin>
</zend-config>
